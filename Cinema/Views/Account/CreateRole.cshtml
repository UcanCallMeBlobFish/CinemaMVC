@model Cinema.ViewModels.RoleVM;

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
    }

    .container1 {
        max-width: 400px;
        margin: 100px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input[type="text"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
        margin-bottom: 10px;
    }

    button[type="submit"] {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 3px;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>

<form method="post" asp-action="CreateRole" asp-controller="Account" class="container1">
    <div>
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" type="text" />
    </div>
    <button type="submit">Submit</button>
</form>
