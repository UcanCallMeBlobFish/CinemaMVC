@model Cinema.ViewModels.RoleVM;


    <style>
       

        .role-title {
            color: #333;
        }

        .user-info {
            display: block;
            margin-bottom: 5px;
        }

        .action-link {
            display: inline-block;
            margin-right: 10px;
            background-color: #007bff;
            color: #fff;
            padding: 5px 10px;
            text-decoration: none;
            border-radius: 4px;
        }

            .action-link:hover {
                background-color: #0056b3;
            }
    </style>

<div>
    <h1 class="role-title">@Model.Name</h1>
    @foreach (var user in Model.users)
    {
        <div class="user-info">
            <span class="user-email">Email: @user.Email</span>
            <span class="user-name">Name: @user.Name</span>
        </div>
    }
    <a class="action-link" asp-action="addtorole" asp-controller="Account" asp-route-Id="@Model.id">Add To Role</a>
    <a class="action-link" asp-action="removefromrole" asp-controller="Account" asp-route-Id="@Model.id">Remove from Role</a>
</div>
