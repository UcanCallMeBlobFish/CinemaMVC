@model Cinema.ViewModels.LoginVM

<link href="~/css/login.css" rel="stylesheet" />

    <form method="post" asp-action="Login" asp-controller="Account">
    <div class="container">
        <div class="login-form">

            <h2>Login</h2>
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Email">Username:</label>
                <input asp-for="Email" type="text" required />
                <span asp-validation-for="Email"></span>

            </div>

            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" required />
                <span asp-validation-for="Password"></span>

            </div>



            <button type="submit">Login</button>
        </div>
    </div>
    </form>
