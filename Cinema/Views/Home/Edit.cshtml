@model Cinema.Models.Movie
<link rel="stylesheet" href="~/css/create.css" />


<div class="container">
    <h2>Edit Movie</h2>

    <form method="post" asp-action="Edit" asp-controller="Home">

        <input type="hidden" asp-for="MovieId" /> 

        <div class="form-group">
            <label for="Title">Title:</label>
            <input type="text" id="Title" name="Title" asp-for="Title" required>
        </div>

        <div class="form-group">
            <label for="Description">Description:</label>
            <textarea id="Description" name="Description" rows="4" asp-for="Description" required>@Model.Description</textarea>
        </div>

        <div class="form-group">
            <label for="StartDate">Start Date:</label>
            <input type="date" id="StartDate" name="StartDate" asp-for="StartDate" required value="@Model.StartDate.ToString("yyyy-MM-dd")">
        </div>

        <div class="form-group">
            <label for="EndDate">End Date:</label>
            <input type="date" id="EndDate" name="EndDate" asp-for="EndDate" required value="@Model.EndDate.ToString("yyyy-MM-dd")">
        </div>

        <div class="form-group">
            <label for="Status">Status:</label>
            <input type="checkbox" id="Status" name="Status" asp-for="Status" checked>
        </div>

        <div class="form-group">
            <label for="Imgurl">Image URL:</label>
            <input type="text" id="Imgurl" name="Imgurl" asp-for="Imgurl" required value="@Model.Imgurl">
        </div>

        <div class="form-group">
            <label for="Price">Price:</label>
            <input type="number" id="Price" name="Price" step="0.01" asp-for="Price" required value="@Model.Price">
        </div>

        <!-- Fields related to Category -->
        <div class="form-group">
            <label for="CategoryId">Category:</label>
            <select id="CategoryId" name="CategoryId" asp-for="CategoryId" required>
                <option value="">Select a Category</option>
                <option value="1" selected="@Model.CategoryId == 1">Category 1</option>
                <option value="2" selected="@Model.CategoryId == 2">Category 2</option>
                <!-- Add more options as needed -->
            </select>
        </div>

        <!-- Fields related to Producer -->
        <div class="form-group">
            <label for="ProducerId">Producer:</label>
            <select id="ProducerId" name="ProducerId" asp-for="ProducerId" required>
                <option value="">Select a Producer</option>
                <option value="1" selected="@Model.ProducerId == 1">Producer 1</option>
                <option value="2" selected="@Model.ProducerId == 2">Producer 2</option>
                <!-- Add more options as needed -->
            </select>
        </div>

        <button type="submit">Save Changes</button>
    </form>
</div>
